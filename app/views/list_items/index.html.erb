<div class="pad-top-3">
  <section class="h-100">
    <header class="container h-100">
      <div class="card d-flex align-items-center h-100">
        <p id="notice"><%= notice %></p>

        <div class="card-title width-30">
          <div class="row">
            <div class="col-sm-10 col-12">
              <h2 class="color-salmon">To-Do List</h2>
            </div>
            <div class="col-sm-2 col-12">
              <%= link_to ('<i class="fa fa-plus"></i>').html_safe, new_list_item_path  %>
              <%# <%= link_to 'Add', new_list_item_path, class: "btn btn-outline-dark ml-auto" %>
            </div>
          </div>
        </div>

        <div class="card-body d-flex flex-column">
          <table>
            <tbody>
              <% @list_items.each do |list_item| %>
                <tr>
                  <td><%= link_to "#{list_item.description}", edit_list_item_path(list_item) %></td>
                  <td><%= link_to "Done", completed_list_item_path(list_item), method: :patch  %>
                </tr>
              <% end %>
            </tbody>
          </table>
          </br>
          <p class="text-center"><%= link_to "View Recently Completed Items", recently_completed_list_items_path %></p>
        </div>

      </div>
    </header>
  </section>
</div>
